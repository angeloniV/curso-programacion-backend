
<div class="container">
     <div class="row">
        <div class="col"></div>
        <div class="col">
            <form action="/session/login" method="post" class="mt-3 mb-3" style="border:2px solid #0d6efd; border-radius: 5px;background-color:#0d6efd; width: 400px">
                <div class="row">
                    <div class="col-md m-2">
                        <p class="text-start" style="font-weight: bold;color:white">Iniciar sesion</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md m-2">
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email" name="email">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md m-2">
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                    </div>
                </div>
                <div class="d-grid gap-2 d-md-block m-2">
                    <button type="submit" class="btn btn-success">Iniciar sesion</button>
                    <a type="button" class="btn btn-outline-light md-2" href="/session/register">Registrarse</a>
                </div>
                <div class="d-grid col-8 mx-auto">
                    <a id="github-button" class="btn btn-dark m-2" href="/session/github">
                        Ingresar con Github <i class="fa fa-github"></i>
                    </a>
                </div>
            </form>
        </div>
        <div class="col"></div>
        
    </div>
</div>
